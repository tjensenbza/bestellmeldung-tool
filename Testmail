<!DOCTYPE html>
<html lang="de">
<head>
  <meta charset="UTF-8">
  <title>EmailJS-Testseite</title>
</head>
<body>
  <h1>EmailJS Test</h1>
  <form id="mailtest">
    <input type="text" name="artikelname" placeholder="Artikelname" required><br>
    <input type="text" name="restbestand" placeholder="Restbestand" required><br>
    <input type="text" name="melder" placeholder="Melder" required><br>
    <button type="submit">E-Mail senden</button>
  </form>

  <script src="https://cdn.emailjs.com/dist/email.min.js"></script>
  <script>
    emailjs.init('T4LfwnksXq_g6D9BG');

    document.getElementById('mailtest').addEventListener('submit', function(e) {
      e.preventDefault();
      emailjs.send('service_635wmwu', 'template_yzgxwx6', {
        artikelname: this.artikelname.value,
        restbestand: this.restbestand.value,
        melder: this.melder.value
      })
      .then(function(response) {
        alert("✅ E-Mail versendet: " + response.status);
      }, function(error) {
        alert("❌ Fehler: " + JSON.stringify(error));
        console.error(error);
      });
    });
  </script>
</body>
</html>
